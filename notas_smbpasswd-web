# clonar repo
https://github.com/0x3333/smbpasswd-web.git

# crear token no ssl
./app.py gen-token sambon

# levantar servidor - http con opciones personalizadas
./app.py server -p 8000 -v -a 0.0.0.0 --sudo

# crear token ssl
./app.py gen-token sambon --ssl

# levantar servidor - https con opciones personalizadas
./app.py server -v -a 0.0.0.0 --sudo --ssl --ssl-cert ../sambapass.local.crt --ssl-key ../sambapass.local.key

# configurar como servicio
## crear archivo service
cat smbpasswd-web.service

[Unit]
Description=Demonio para smbpasswd-Web

[Service]
ExecStart=/home/vagrant/smbpasswd-web/app.py server -p 8000 -v -a 0.0.0.0 --sudo
WorkingDirectory=/home/vagrant/smbpasswd-web

[Install]
WantedBy=multi-user.target

## copiar a carpeta con servicios systemd
cp smbpasswd-web.service /etc/systemd/system/

## recargar demonio y reiniciar servicio
systemctl daemon-reload && systemctl start smbpasswd-web.service --now

# fix puerto en url
editar linea 77 --> print(f"{protocol}://{fqdn}:8000/?{token}")