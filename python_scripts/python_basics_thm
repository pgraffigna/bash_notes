# files
# leer archivos
f = open("file_name", "r")
print(f.read())

# escribir archivos
# ej 1
f = open("demofile1.txt", "a") # a=append to file
f.write("The file will include more text..")
f.close()

# ej 2
f = open("demofile2.txt", "w") # w=create o write to a new file
f.write("demofile2 file created, with this content in!")
f.close()

