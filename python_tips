# web servers
python -m http.server 8080 \
       --directory /tmp/ 
       --bind 127.0.0.1  

# ftp
pip install pyftpdlib

python -m pyftpdlib \
       --port 2121 \
       -d /tmp/ \
       -u someuser \
       -P somepass

# abrir web-browser (default) 
python -m webbrowser -n "https://www.python.org"

# abrir web-browser (a demanda)
import webbrowser

url = "https://docs.python.org/"

wb = webbrowser.get("google-chrome %s")
wb.open_new(url)

