# optimiza todas las db
mysqlcheck -o --all-databases --user root

# chequea todas las db
mysqlcheck -c --all-databases --user root

# auto-reparacion de db especifica
mysqlcheck --auto-repair -o test_db --user root
mysqlcheck --auto-repair --all-databases --user root

# import db
gunzip < databasefile.sql.gz | mysql -u root -p dbname
