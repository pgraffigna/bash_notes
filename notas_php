## notas para instalacion PHP
# agregando repo
LC_ALL=C.UTF-8 add-apt-repository ppa:ondrej/php

# instalando php 5.6
sudo apt update && sudo apt install -y php5.6

# chequeando estado
php -v
apachectl -M

# cambiando default php
sudo update-alternatives --config php

# instalando php 7.4
sudo apt update && sudo apt install -y php7.4

# desactivando modulos php
sudo a2dismod php*

# activando php7.4
sudo a2enmod php7.4

# instalando php8.2
sudo apt update && sudo apt install -y php8.2

# desactivando modulos php
sudo a2dismod php*

# activando php8.2
sudo a2enmod php8.2

# reiniciando servicio
sudo systemctl restart apache2.service
